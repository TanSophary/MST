@{
    ViewData["Title"] = "Home";
}
<link href="~/css/home.css" rel="stylesheet" />

<!-- Hero Section -->
<div class="home-container d-flex align-items-center">
    <!-- Background image -->
    <img src="~/images/background-login3.jpg"
         class="w-100 vh-100 object-fit-cover position-fixed"
         alt="Engineering Building" />

    <!-- Hero content (left side, vertically centered) -->
    <div class="home-content text-white ps-5">
        <h1 class="display-4 fw-bold">Welcome to Our Engineering Building</h1>
        <p class="lead">Explore the facilities, learn about our programs, and join our community of innovators.</p>
        <a href="/About" class="btn btn-lg btn-light fw-bold">Learn More</a>
    </div>
</div>

<!-- Second Section -->
<div class="home-container2">
    <!-- Left description -->
    <div class="description">
        <h2>About Our Engineering Building</h2>
        <p>Our engineering building offers state-of-the-art labs, classrooms, and collaborative spaces for students and faculty. We foster innovation, research, and hands-on learning opportunities for all engineering disciplines.</p>
        <a href="/Programs" class="btn btn-primary fw-bold">Explore Programs</a>
    </div>
    <!-- Right image -->
    <div class="image">
        <img src="~/images/background-login1.jpg" alt="Engineering Building">
    </div>
</div>
