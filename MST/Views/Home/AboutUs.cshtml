@{
    ViewData["Title"] = "About Us";
}
<link href="~/css/about.css" rel="stylesheet" asp-append-version="true" />

<!-- Hero Section -->
<section class="about-hero-section d-flex align-items-center text-white text-center">
    <div class="about-hero-overlay"></div>
    <div class="container position-relative z-2">
        <h1 class="display-5 fw-bold mb-3 text-uppercase">About Our Company</h1>
        <p class="lead">Engineering excellence. Sustainable innovation. Building the future with precision.</p>
        <a href="/Home/about" class="btn btn-primary px-4 py-2 fw-semibold rounded-pill shadow-lg animate-fade-in">
            Explore Our Service
        </a>
    </div>
</section>

<!-- Company Overview Section -->
<section class="about-list-section py-5">
    <div class="container">
        <h2 class="fw-bold text-center mb-5 text-primary">Who We Are</h2>
        <div class="row align-items-center mb-5">
            <div class="col-md-6 mb-4 mb-md-0">
                <div class="about-image-wrapper">
                    <img src="~/images/test2.jpg" class="img-fluid rounded shadow" alt="Our Company">
                    <div class="about-overlay">
                        <i class="bi bi-buildings fs-2 text-white"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <p class="text-muted fs-5">
                    We are a professional engineering and construction company dedicated to building high-quality
                    commercial, residential, and industrial projects. Our focus is on innovation, sustainability,
                    and delivering durable structures that stand the test of time.
                </p>
                <p class="text-muted">
                    With a team of experienced engineers, architects, and project managers, we provide end-to-end
                    solutions — from planning and design to construction and maintenance.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Mission & Vision Section -->
<section class="py-5">
    <div class="container">
        <h2 class="fw-bold text-center mb-5 text-primary">Our Mission & Vision</h2>
        <div class="row g-4 text-center">
            <div class="col-md-6">
                <div class="about-card p-4">
                    <div class="about-image-wrapper mb-3">
                        <img src="~/images/test2.jpg" class="img-fluid rounded" alt="Mission">
                        <div class="about-overlay">
                            <i class="bi bi-bullseye fs-2 text-white"></i>
                        </div>
                    </div>
                    <h5 class="fw-bold">Our Mission</h5>
                    <p class="text-muted">
                        To deliver engineering and construction excellence by combining innovation,
                        safety, and quality to meet our clients’ expectations.
                    </p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="about-card p-4">
                    <div class="about-image-wrapper mb-3">
                        <img src="~/images/test2.jpg" class="img-fluid rounded" alt="Vision">
                        <div class="about-overlay">
                            <i class="bi bi-eye fs-2 text-white"></i>
                        </div>
                    </div>
                    <h5 class="fw-bold">Our Vision</h5>
                    <p class="text-muted">
                        To become a trusted leader in engineering and construction, known for innovation,
                        integrity, and sustainable development.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Core Values Section -->
<section class="about-list-section py-5">
    <div class="container">
        <h2 class="fw-bold text-center mb-5 text-primary">Our Core Values</h2>
        <div class="row g-4 text-center">
            <div class="col-md-3">
                <div class="about-card p-4">
                    <i class="bi bi-shield-check text-primary fs-1 mb-3"></i>
                    <h5 class="fw-bold">Integrity</h5>
                    <p class="text-muted">We value honesty and transparency in every project we deliver.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="about-card p-4">
                    <i class="bi bi-lightbulb text-primary fs-1 mb-3"></i>
                    <h5 class="fw-bold">Innovation</h5>
                    <p class="text-muted">We embrace modern techniques to create sustainable solutions.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="about-card p-4">
                    <i class="bi bi-people text-primary fs-1 mb-3"></i>
                    <h5 class="fw-bold">Teamwork</h5>
                    <p class="text-muted">Our strength lies in collaboration across disciplines.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="about-card p-4">
                    <i class="bi bi-globe text-primary fs-1 mb-3"></i>
                    <h5 class="fw-bold">Sustainability</h5>
                    <p class="text-muted">We build responsibly for a greener and better tomorrow.</p>
                </div>
            </div>
        </div>
    </div>
</section>
