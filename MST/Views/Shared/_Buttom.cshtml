@* Views/Shared/_Buttom.cshtml *@
<link href="~/css/button.css" rel="stylesheet" asp-append-version="true" />
<script src="~/js/animation.js" asp-append-version="true"></script>
<!-- Ready to Work Together Section -->
<section class="ready-section py-5 position-relative">
    <div class="container d-flex align-items-center justify-content-between flex-wrap animate">
        <!-- Text Content -->
        <div class="ready-text me-4 animate">
            <h1 class="fw-bold mb-3 animate">Ready to work together?</h1>
            <p class="mb-4 fs-5 text-muted animate">
                Whether you have a project in mind and you’re looking for a reliable construction partner
                or you’re looking to take the next step in your career, we want to hear from you!
            </p>
            <div class="d-flex gap-3 flex-wrap animate">
                <a href="#project" class="btn btn-solid animate">Build a Project with Us</a>
                <a href="#career" class="btn btn-outline animate">Build a Career with Us</a>
            </div>
        </div>
        <!-- Decorative Shapes -->
        <div class="shapes animate">
            <span class="polygon-left animate"></span>
            <span class="polygon-right animate"></span>
        </div>
    </div>
</section>