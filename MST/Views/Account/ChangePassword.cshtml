@using MST.ViewModels
@model ChangePasswordViewModel

@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<link href="~/css/account.css" rel="stylesheet" />

<div class="account-container">
    <div class="login-card">
        <!-- Left panel: Change Password form -->
        <div class="login-form">
            <h2>Change Password</h2>
            <p>Enter your email and new password</p>
            <form asp-action="ChangePassword" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Token" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                </div>

                <div class="mb-3">
                    <input asp-for="NewPassword" class="form-control" placeholder="New Password" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-login w-100">Submit</button>

                <div class="text-center mt-3">
                    <a asp-controller="Account" asp-action="VerifyEmail">Back</a>
                </div>
            </form>
        </div>

        <!-- Right panel: Info / Branding -->
        <div class="login-info">
            <h2>Secure Your Account</h2>
            <p>
                At M.S.T, your account security is our priority. Please set a new password to continue accessing our engineering solutions safely. Strengthen your credentials and stay connected to projects, innovation, and excellence in engineering.
            </p>
            <p>Secure your account with M.S.T by updating your password.</p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
