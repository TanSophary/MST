<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MST</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Archivo+Narrow:ital,wght@0,400..700;1,400..700&family=Oswald:wght@200..700&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TESTING</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Service">Service</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Admin">Admin</a>
                            </li>
                        }
                        @if (User.IsInRole("User"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="User">User</a>
                            </li>
                        }
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
    <footer class="footer-section text-white">
        <div class="container py-5">
            <div class="row">
                <!-- Logo and description -->
                <div class="col-md-3 mb-4">
                    <div class="footer-logo d-flex align-items-center mb-3">
                        <img src="~/images/logo.jpg" alt="Logo" width="40" class="me-2">
                        <h5 class="m-0 fw-bold">CONCHITEC</h5>
                    </div>
                    <p class="text-light small">
                        Helping industry through innovative construction technology.
                    </p>
                </div>

                <!-- Pages -->
                <div class="col-md-3 mb-4">
                    <h6 class="text-uppercase fw-bold text-orange mb-3">Pages</h6>
                    <ul class="list-unstyled small">
                        <li><a href="#" class="footer-link">About Us</a></li>
                        <li><a href="#" class="footer-link">Project</a></li>
                        <li><a href="#" class="footer-link">FAQs</a></li>
                        <li><a href="#" class="footer-link">Contact Us</a></li>
                    </ul>
                </div>

                <!-- Connect with us -->
                <div class="col-md-3 mb-4">
                    <h6 class="text-uppercase fw-bold text-orange mb-3">Connect With Us</h6>
                    <ul class="list-unstyled small">
                        <li><a href="#" class="footer-link">Pinterest</a></li>
                        <li><a href="#" class="footer-link">LinkedIn</a></li>
                        <li><a href="#" class="footer-link">Behance</a></li>
                        <li><a href="#" class="footer-link">Dribbble</a></li>
                        <li><a href="#" class="footer-link">Twitter</a></li>
                    </ul>
                </div>

                <!-- Contact -->
                <div class="col-md-3 mb-4">
                    <h6 class="fw-bold text-orange">PHONE NUMBER</h6>
                    <p class="mb-1 fw-bold">(09)765438082</p>
                    <h6 class="fw-bold text-orange mt-3">EMAIL</h6>
                    <p class="fw-bold mb-2">MAIL@CONCHITEC.ID</p>
                    <p class="small text-light mb-3">
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                    </p>
                    <a href="#" class="btn btn-outline-light btn-sm rounded-pill px-3">Read More</a>
                </div>
            </div>
        </div>

        <div class="footer-bottom text-center py-3 mt-4 border-top border-secondary small">
            <p class="mb-1">© 2025 Conchitec. All rights reserved.</p>
            <a href="#" class="footer-link me-2">Privacy Policy</a> |
            <a href="#" class="footer-link ms-2">Terms of Services</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        window.addEventListener("scroll", function () {
            const navbar = document.querySelector(".navbar");
            navbar.classList.toggle("scrolled", window.scrollY > 50);
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>