@{
    ViewData["Title"] = "Email Send";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<link href="~/css/account.css" rel="stylesheet" />

<div class="account-container">
    <div class="login-card">
        <!-- Left panel: Email sent message -->
        <div class="login-form">
            <h2>Email Sent</h2>
            <p>A verification email has been sent to your email address. Please check your inbox and follow the instructions to verify your email.</p>
            <div class="text-center mt-3">
                <a asp-controller="Account" asp-action="Login" class="btn btn-login w-100">Back To Login</a>
            </div>
        </div>

        <!-- Right panel: Info / Branding -->
        <div class="login-info">
            <h2>Welcome to SkcR!</h2>
            <p>
                Keep your account secure and enjoy personalized skincare tips, exclusive offers, and track your skin’s progress.
                Log in anytime to continue your skincare journey.
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
