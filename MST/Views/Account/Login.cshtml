@using MST.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<link href="~/css/account.css" rel="stylesheet" />

<div class="account-container">
    <div class="login-card">
        <!-- Left panel: Login form -->
        <div class="login-form">
            <h2>Hello!</h2>
            <p>Sign in to your account</p>
            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-links mb-3">
                    <div>
                        <input asp-for="RememberMe" type="checkbox" id="remember" />
                        <label for="remember">@Html.DisplayNameFor(a => a.RememberMe)</label>
                    </div>
                    <a asp-controller="Account" asp-action="VerifyEmail">Forgot password?</a>
                </div>

                <button type="submit" class="btn btn-login w-100">SIGN IN</button>

                @* <p class="text-center mt-3"> *@
                @*     Don't have an account? <a asp-controller="Account" asp-action="Register">Register</a> *@
                @* </p> *@
                @* <div class="text-center mt-2"> *@
                @*     <a asp-controller="Home" asp-action="Index">Back</a> *@
                @* </div> *@
            </form>
        </div>

        <!-- Right panel: Info / Branding -->
        <div class="login-info">
            <h2>Welcome Back to M.S.T!</h2>
            <p>
                M.S.T is an engineering company committed to building innovative solutions that support industries and communities. With expertise, precision, and reliability, we deliver projects that drive progress, strengthen infrastructure, and create lasting impact through engineering excellence.
            </p>
            <p> Building innovation, strength, and trust through engineering.</p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}


