@{
    ViewData["Title"] = "Home";
}
<link href="~/css/home.css" rel="stylesheet" asp-append-version="true" />

<!-- Hero Content Section -->
<section class="hero-section d-flex align-items-center">
    <div class="hero-overlay"></div>
    <div class="container text-white position-relative z-2">
        <div class="hero-content">
            <h1 class="display-4 fw-bold">Building the Future with Excellence</h1>
            <p class="lead mb-4">
                We deliver innovative engineering and construction solutions with quality, safety, and integrity.
            </p>
            <div class="search-bar d-flex align-items-center">
                <select class="form-select me-2">
                    <option>Building Construction</option>
                    <option>Civil Engineering</option>
                    <option>Industrial Projects</option>
                </select>
                <select class="form-select me-2">
                    <option>Cambodia</option>
                    <option>Thailand</option>
                    <option>Vietnam</option>
                </select>
                <button class="btn btn-primary px-4">Explore</button>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section py-5 text-center">
    <div class="container">
        <h2 class="fw-bold mb-4">Committed to Engineering Excellence</h2>
        <p class="text-muted mb-5">Providing reliable construction and engineering services that build trust and innovation.</p>
        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="feature-card p-4">
                    <h3 class="fw-bold text-primary">350+</h3>
                    <p>Completed Projects</p>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="feature-card p-4">
                    <h3 class="fw-bold text-primary">120+</h3>
                    <p>Professional Engineers</p>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="feature-card p-4">
                    <h3 class="fw-bold text-primary">15+</h3>
                    <p>Years of Experience</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Projects Section -->
<section class="featured-section py-5">
    <div class="container">
        <h2 class="fw-bold mb-4 text-center">Our Featured Engineering Projects</h2>
        <div class="property-row-wrapper position-relative">
            <div class="row g-4 property-row flex-nowrap overflow-auto">
                <div class="col-md-4">
                    <div class="property-card">
                        <img src="~/images/test2.jpg" alt="Project 1">
                        <div class="p-3">
                            <h5 class="fw-bold">Urban Infrastructure Development</h5>
                            <p class="text-muted">Phnom Penh • Completed 2024</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="property-card">
                        <img src="~/images/test2.jpg" alt="Project 2">
                        <div class="p-3">
                            <h5 class="fw-bold">Highway Expansion Project</h5>
                            <p class="text-muted">Siem Reap • Ongoing</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="property-card">
                        <img src="~/images/test2.jpg" alt="Project 3">
                        <div class="p-3">
                            <h5 class="fw-bold">Industrial Plant Construction</h5>
                            <p class="text-muted">Sihanoukville • Completed 2023</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="property-card">
                        <img src="~/images/test2.jpg" alt="Project 4">
                        <div class="p-3">
                            <h5 class="fw-bold">Bridge Engineering Project</h5>
                            <p class="text-muted">Kampot • Under Construction</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="property-card">
                        <img src="~/images/test2.jpg" alt="Project 5">
                        <div class="p-3">
                            <h5 class="fw-bold">Commercial Building Project</h5>
                            <p class="text-muted">Battambang • Design Stage</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="property-card">
                        <img src="~/images/test2.jpg" alt="Project 6">
                        <div class="p-3">
                            <h5 class="fw-bold">Hydropower Plant Project</h5>
                            <p class="text-muted">Stung Treng • Completed 2022</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Right arrow icon -->
            <div class="scroll-icon">
                <i class="fas fa-angle-double-right"></i>
            </div>
        </div>
    </div>
</section>

<script>
    document.querySelector('.scroll-icon').addEventListener('click', () => {
        document.querySelector('.property-row').scrollBy({ left: 300, behavior: 'smooth' });
    });
</script>
