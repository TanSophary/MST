@using MST.ViewModels
@model VerifyViewModel

@{
    ViewData["Title"] = "Verify Email";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<link href="~/css/account.css" rel="stylesheet" />

<div class="account-container">
    <div class="login-card">
        <!-- Left panel: Verify Email form -->
        <div class="login-form">
            <h2>Email Verification</h2>
            <p>Please enter your email to verify your account</p>
            <form asp-action="VerifyEmail" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-login w-100">Verify Email</button>

                <div class="text-center mt-3">
                    <a asp-controller="Account" asp-action="Login">Back</a>
                </div>
            </form>
        </div>

        <!-- Right panel: Info / Branding -->
        <div class="login-info">
            <h2>Welcome Back to M.S.T!</h2>
            <p>
                M.S.T is an engineering company committed to delivering innovative solutions that shape industries and communities. Please verify your email to access our platform, stay updated on projects, and join us in building excellence through engineering.
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
