@{
    ViewData["Title"] = "Our Services";
}
<link href="~/css/service.css" rel="stylesheet" asp-append-version="true" />

<!-- Hero Content Section -->
<section class="service-hero-section d-flex align-items-center">
    <div class="service-hero-overlay"></div>
    <div class="container text-white position-relative z-2">
        <div class="service-hero-content">
            <h1 class="display-4 fw-bold">Building the Future with Excellence</h1>
            <p class="lead mb-4">
                We deliver innovative engineering and construction solutions with quality, safety, and integrity.
            </p>
            <div class="search-bar d-flex align-items-center">
                <select class="form-select me-2">
                    <option>Building Construction</option>
                    <option>Civil Engineering</option>
                    <option>Industrial Projects</option>
                </select>
                <select class="form-select me-2">
                    <option>Cambodia</option>
                    <option>Thailand</option>
                    <option>Vietnam</option>
                </select>
                <button class="btn btn-primary px-4">Explore</button>
            </div>
        </div>
    </div>
</section>

<!-- Service Cards Section -->
<section class="service-list-section py-5">
    <div class="container">
        <h2 class="fw-bold text-center mb-5">What We Offer</h2>
        <div class="row g-4">
            <!-- Service 1 -->
            <div class="col-md-4">
                <div class="service-card p-4 text-center">
                    <img src="~/images/test2.jpg" alt="Building Construction" class="img-fluid rounded mb-3">
                    <h5 class="fw-bold">Building Construction</h5>
                    <p class="text-muted">
                        We specialize in high-quality commercial and residential construction with strong attention to detail.
                    </p>
                </div>
            </div>

            <!-- Service 2 -->
            <div class="col-md-4">
                <div class="service-card p-4 text-center">
                    <img src="~/images/test2.jpg" alt="Civil Engineering" class="img-fluid rounded mb-3">
                    <h5 class="fw-bold">Civil Engineering</h5>
                    <p class="text-muted">
                        Our civil engineering services ensure sustainable infrastructure with precision and safety.
                    </p>
                </div>
            </div>

            <!-- Service 3 -->
            <div class="col-md-4">
                <div class="service-card p-4 text-center">
                    <img src="~/images/test2.jpg" alt="Project Consulting" class="img-fluid rounded mb-3">
                    <h5 class="fw-bold">Project Consulting</h5>
                    <p class="text-muted">
                        We provide professional consulting and project management for efficient and cost-effective execution.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
